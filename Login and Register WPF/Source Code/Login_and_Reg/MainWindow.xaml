        <TextBox x:Name="BOX3" HorizontalAlignment="Left" Margin="389,256,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="BOX3_TextChanged"/>
        <Label Content="Register" HorizontalAlignment="Left" Margin="322,75,0,0" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="389,363,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

